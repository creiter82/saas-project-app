<% if current_user %>

<h3 class="pull-right">Organization: <%= @tenant.name %></h3>
<%= render 'projects/list' %>

<% else %>

<div class="jumbotron">
  <h2>Welcome to the Project Managment Application!</h2>
  <p class="lead">
    You'll love managing your project with out SaaS application. Please take a look at our great plans
  </p>
</div>
<div class="row">
  <div class="plans clearfix">
    <div class="col-lg-3 col-lg-offset-3 plan">
      <h2>Free Plan</h2>
      <div class="features">
        <ul>
          <li>Unlimited file uploads</li>
          <li>Responsive design</li>
          <li>Access anywhere</li>
          <li>1 project</li>
        </ul>
      </div>
      <div class="price">
        Free
      </div>
      <p>
        <%= link_to 'Sign Up', new_user_registration_path(plan: 'free'), class: 'btn btn-primary' %>
      </p>
    </div>
    <div class="col-lg-3 plan">
      <h2>Premium Plan</h2>
      <div class="features">
        <ul>
          <li>Unlimited file uploads</li>
          <li>Responsive design</li>
          <li>Access anywhere</li>
          <li class="extra">Unlimited projects</li>
        </ul>
      </div>
      <div class="price">
        $10/mo
      </div>
      <p>
        <%= link_to 'Sign Up', new_user_registration_path(plan: 'premium'), class: 'btn btn-primary' %>
      </p>
    </div>
  </div>
</div>
    
<% end %>
